<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("page.title.home"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("page.title.home2"), root_path %></li>
        <li><%= link_to t("page.title.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("page.login.users"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle",
              data: {toggle: "dropdown"} do %> 
                <%= t("page.login.account") %><b class="caret"></b>
              <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("page.login.profile"), current_user %></li>
              <li><%= link_to t("page.login.settings"), "#" %></li>
              <li class="divider"></li>
              <li><%= link_to t("page.login.logout"), logout_path, 
                method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("page.index.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
