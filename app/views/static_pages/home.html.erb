<% provide :title, t("page.title.home") %>
<% if logged_in? %>
  <div class="jumbotron row">
    <aside class="col-md-5">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-7">
      <h3 class="center"><%= t "page.title.micropost" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "page.title.home" %></h1>
    <h2>
    <%= t "page.content.home" %><%= link_to Settings.ror, Settings.home_ruby %>
    </h2>
    <%= link_to t("page.index.signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
    <%= link_to image_rails, Settings.ruby %>
<% end %>
