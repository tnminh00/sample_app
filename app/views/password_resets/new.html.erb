<% provide :title, t("page.title.forgot") %>
<div class="row page">
  <h1><%= t "page.title.forgot" %></h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label t("page.index.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.submit t("page.index.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
