<% provide :title, @title %>
<div class="row jumbotron">
  <div class="row">
    <aside class="col-md-5">
      <section class="user_info">
        <%= link_to gravatar_for(@user, size: Settings.gravatar.size3), @user %>
        <h3><%= @user.name %></h3>
        <span><%= link_to t("page.micropost.view"), @user %></span>
        <span><b><%= t "page.micropost.micropost" %></b> <%= @user.microposts.count %></span>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
        <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
              <%= link_to gravatar_for(user, size: Settings.gravatar.size4), user %>
            <% end %>
          </div>
        <% end %>
      </section>
    </aside>
    <div class="col-md-7">
      <h3 class="center"><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= paginate @users, theme: Settings.theme %>
      <% end %>
    </div>
  </div>
</div>
