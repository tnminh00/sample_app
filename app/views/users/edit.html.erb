<% provide :title, t("page.title.signup") %>
<% provide :button_text, t("page.edit.save") %>
<div class="row page">
  <h1><%= t "page.edit.update" %></h1>
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <%= render "form" %>
    </div>
    <div class="row gravatar_edit col-md-offset-5">
      <%= gravatar_for @user %>
      <%= link_to t("page.edit.change"), Settings.gravatar.emails,
        target: "_blank" %>
    </div>
  </div>
</div>
