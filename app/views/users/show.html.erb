<% provide :title, @user.name %>
<div class="center jumbotron">
  <div class="row">
    <aside class="col-md-5">
      <section class="user_info">
        <h2>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h2>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
    <div class="col-md-7">
      <%= render "follow_form" if logged_in? %>
      <% if @user.microposts.any? %>
        <h3><%= t "page.micropost.micropost" %> (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= paginate @microposts, theme: Settings.theme %>
      <% end %>
    </div>
  </div>
</div>
