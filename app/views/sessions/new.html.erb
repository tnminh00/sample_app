<% provide :title, t("page.title.login") %>
<div class="row page">
  <h1><%= t "page.title.login" %></h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label t("page.index.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t("page.index.password") %>
      <%= link_to t("page.login.forgot"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline center" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "page.login.remember" %></span>
      <% end %>

      <%= f.submit t("page.title.login"), class: "btn btn-primary" %>
    <% end %>
    <p id="new_user"><%= t "page.login.new_user" %>
      <%= link_to t("page.index.signup"), signup_path %></p>
  </div>
</div>
